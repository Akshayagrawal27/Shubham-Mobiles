<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.shubhammobiles.shubhammobiles">

    <uses-permission android:name="android.permission.CALL_PHONE" />

    <application
        android:allowBackup="true"
        android:icon="@drawable/shubhammobiles"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity
            android:name=".Splash"
            android:theme="@style/Theme.AppCompat.Light.NoActionBar">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".login.LoginActivity"
            android:theme="@style/Theme.AppCompat.Light.NoActionBar" />
        <activity android:name=".MainActivity" />
        <activity android:name=".brandmodel.BrandModelActivity" />
        <activity
            android:name=".order.AddOrder"
            android:label="Add Order" />
        <activity android:name=".variant.VariantActivity" />
        <activity android:name=".order.OrderDetail" />
        <activity android:name=".notelist.NoteListActivity" />
        <activity android:name=".notelist.Notepad" />
        <activity android:name=".price.PriceActivity" />

        <receiver
            android:name=".BroadcastReceiver.AlarmBroadcastReceiver"
            android:enabled="true" />

        <activity android:name=".Sharing.ShareActivity"></activity>
    </application>

</manifest>