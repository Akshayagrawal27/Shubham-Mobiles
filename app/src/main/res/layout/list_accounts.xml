<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    style="@style/list_margin"
    android:id="@+id/accounts_list"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@android:color/white">

    <TextView
        android:id="@+id/tv_account_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginTop="8dp"
        android:textColor="@color/colorAccent"
        android:textSize="20sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:text="Akshay Agrawal" />

    <TextView
        android:id="@+id/tv_account_contact_number"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="220dp"
        android:textSize="16sp"
        android:textStyle="bold"
        android:textColor="@color/value_green"
        app:layout_constraintBottom_toTopOf="@+id/tv_account_name"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tv_account_name"
        tools:text="+919329871944" />

    <TextView
        android:id="@+id/tv_account_address"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toStartOf="@+id/tv_account_name"
        app:layout_constraintTop_toBottomOf="@+id/tv_account_name"
        tools:text="Bhatapara"
        android:textColor="@android:color/black" />

    <TextView
        android:id="@+id/tv_account_shared_by"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        tools:text="Shared By: "
        app:layout_constraintStart_toStartOf="@+id/tv_account_address"
        app:layout_constraintTop_toBottomOf="@+id/tv_account_address"
        android:visibility="gone"/>
</android.support.constraint.ConstraintLayout>