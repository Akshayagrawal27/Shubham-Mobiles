<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    style="@style/list_margin"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@android:color/white">

    <TextView
        android:id="@+id/tv_note_date"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginTop="8dp"
        tools:text="Mar 10, 2018"
        android:textColor="@color/colorAccent"
        android:textSize="20sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/tv_note_last_updated"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        tools:text="11/03/2018 00:00:00"
        android:textColor="@color/black"
        app:layout_constraintStart_toStartOf="@+id/tv_note_date"
        app:layout_constraintTop_toBottomOf="@+id/tv_note_date" />

    <TextView
        android:id="@+id/tv_note_preview"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:maxLines="2"
        tools:text=""
        app:layout_constraintStart_toEndOf="@+id/tv_note_last_updated"
        app:layout_constraintTop_toTopOf="@+id/tv_note_last_updated" />


</android.support.constraint.ConstraintLayout>